<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9ABC73"
    tools:context=".SecondActivity">


    <ImageView
        android:id="@+id/wallpapper"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="#A53535"
        android:scaleType="centerCrop"
        android:src="@drawable/main"
        android:tint="#C1FFFFFF"
        app:tint="#92012D6C" />

    <TextView
        android:id="@+id/appname"
        android:layout_width="143dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="458dp"
        android:fontFamily="sans-serif-medium"
        android:text="    i-Insuarance"
        android:textColor="#FFC107"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="153dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="482dp"
        android:text="Dare to Invest"
        android:textColor="#FFC107"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="507dp"
        android:text="Home"
        android:textColor="#FFC107"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/notification"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="294dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="578dp"
        app:srcCompat="@drawable/bell" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="235dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/life"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_weight="1.0"
            android:backgroundTint="#776759"
            android:freezesText="false"
            android:text="Account"
            android:textStyle="normal|italic"
            android:visibility="visible"
            app:icon="@drawable/person"
            app:iconGravity="textEnd"
            app:iconPadding="20dp"
            app:iconSize="60dp"
            app:rippleColor="#8A3333"
            app:strokeColor="#350D0D"
            tools:visibility="visible" />

        <Button
            android:id="@+id/patent"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_weight="1.0"
            android:backgroundTint="#143642"
            android:text="Patent"
            android:textStyle="italic"
            app:icon="@drawable/pate"
            app:iconGravity="textEnd"
            app:iconSize="60dp"
            app:rippleColor="#8A3333"
            app:strokeColor="#350D0D"
            tools:visibility="visible" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="121dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/website"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_weight="1.0"
            android:backgroundTint="#083832"
            android:text="Website"
            android:textStyle="italic"
            android:visibility="visible"
            app:icon="@drawable/net"
            app:iconGravity="textEnd"
            app:iconSize="60dp"
            app:rippleColor="#8A3333"
            app:strokeColor="#350D0D"
            tools:visibility="visible" />

        <Button
            android:id="@+id/insuarance"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_weight="1.0"
            android:backgroundTint="#4fc180"
            android:text="cOVER"
            android:textStyle="italic"
            app:icon="@drawable/rance"
            app:iconGravity="textEnd"
            app:iconSize="60dp"
            app:rippleColor="#8A3333"
            app:strokeColor="#350D0D"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/agent"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_weight="1.0"
            android:backgroundTint="#86efa0"
            android:text="Agent"
            android:textStyle="italic"
            app:icon="@drawable/agent"
            app:iconGravity="textEnd"
            app:iconSize="60dp"
            app:rippleColor="#8A3333"
            app:strokeColor="#350D0D"
            tools:visibility="visible" />

        <Button
            android:id="@+id/settings"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_weight="1.0"
            android:backgroundTint="#1e4f2a"
            android:text="Settings"
            android:textStyle="italic"
            app:icon="@drawable/settings"
            app:iconGravity="textEnd"
            app:iconSize="60dp"
            app:rippleColor="#8A3333"
            app:strokeColor="#350D0D"
            tools:visibility="visible" />

    </LinearLayout>


</RelativeLayout>